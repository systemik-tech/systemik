{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "**/.env*",
        "next.config.*",
        "tailwind.config.*",
        "postcss.config.*",
        "tsconfig*.json"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "lib/**",
        "build/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "deploy": {
      "dependsOn": ["^build", "build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
